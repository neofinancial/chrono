    "husky": "^9.1.7",
    "rimraf": "^6.1.2",
    "tsdown": "^0.20.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  }
}
